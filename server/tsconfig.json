{
    "compilerOptions": {
        "outDir": "./dist",                // Output directory for compiled JS
        "module": "commonjs",              // CommonJS module system for Node.js
        "target": "es2021",                // Updated target for modern JavaScript
        "moduleResolution": "node",        // Resolves modules using Node.js rules
        "esModuleInterop": true,           // Supports default imports for CommonJS modules
        "strict": true,                    // Enables all strict type-checking options
        "skipLibCheck": true,              // Skips type-checking of node_modules
        "resolveJsonModule": true,         // Allows importing .json files
        "baseUrl": ".",                    // Base path for resolving non-relative imports
        "paths": {
            "*": ["node_modules/*"]        // Resolves node_modules imports
        },
        "types": ["node"]                  // Includes Node.js type definitions
    },
    "include": ["src/**/*"],               // Includes all .ts files in the src directory
    "exclude": ["node_modules", "dist"]    // Excludes node_modules and dist
}
