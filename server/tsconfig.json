{
  "compilerOptions": {
    "target": "ES2020", // Generera modern JavaScript
    "module": "ES2020", // Generera ES Modules
    "moduleResolution": "Node", // Ladda moduler som Node.js gör
    "outDir": "dist", // Sätt output-katalog
    "rootDir": "src", // Sätt källkatalog
    "strict": true,
    "esModuleInterop": true, // Tillåt interop mellan CommonJS och ES Modules
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true // Hoppa över typkontroll i beroenden
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
