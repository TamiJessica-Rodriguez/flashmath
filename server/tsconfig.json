{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "CommonJS", // Node.js expects CommonJS modules
    "moduleResolution": "Node",
    "outDir": "./dist", // Ensure the output directory is clear
    "rootDir": "./src", // Source files are under src
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
